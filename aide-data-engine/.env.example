# Database Configuration
DATABASE_URL=postgresql://aide:aide123@localhost:5432/aide_db
# Or use SQLite for development
# DATABASE_URL=sqlite:///./aide_dev.db

# Claude API Configuration
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# KR-SBERT Model Configuration
EMBEDDING_MODEL=jhgan/ko-sroberta-multitask
EMBEDDING_DIMENSION=768
BATCH_SIZE=32

# DBSCAN Configuration
DBSCAN_EPS=0.3
DBSCAN_MIN_SAMPLES=2

# Representative Article Selection
INFORMATION_WEIGHT=0.5
SOURCE_RELIABILITY_WEIGHT=0.5

# Trusted News Sources (comma-separated)
TRUSTED_SOURCES=조선일보,중앙일보,동아일보,한국경제,매일경제

# Processing Configuration
PROCESS_BATCH_SIZE=100
MAX_WORKERS=4

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/aide_data_engine.log
