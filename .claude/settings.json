{
  "permissions": {
    "allow": [
      "Bash(python -m pytest:*)",
      "Bash(python scripts/*)",
      "Bash(poetry:*)",
      "Bash(git status:*)",
      "Bash(git diff:*)",
      "Bash(git log:*)",
      "Edit(./aide-*/**)",
      "Edit(./scripts/**)",
      "Write(./scripts/**)",
      "Read(./**)"
    ],
    "deny": [
      "Read(./.env)",
      "Read(./.env.*)",
      "Edit(./.env)",
      "Edit(./.env.*)",
      "Bash(rm -rf:*)",
      "Bash(pip install:*)",
      "Bash(poetry publish:*)"
    ],
    "ask": [
      "Bash(python scripts/utils/check_and_clear_db.py:*)",
      "Bash(git commit:*)",
      "Bash(git push:*)",
      "Write(./.env*)"
    ]
  },
  "env": {
    "PYTHONPATH": "${workspaceFolder}",
    "ENV": "development"
  },
  "subagents": {
    "enabled": true,
    "types": [
      "general-purpose",
      "Explore"
    ]
  },
  "tools": {
    "enabled": [
      "Bash",
      "Read",
      "Write",
      "Edit",
      "Glob",
      "Grep",
      "WebFetch",
      "Task"
    ]
  },
  "sandbox": {
    "enabled": false
  }
}
